def indexOf (const baseStr : string, const str : string) -> int {
    let strIndex = 0;
    let baseStrIndex = 0;
    let resIndex = 0;
    
    while (baseStrIndex < baseStr.len && strIndex < str.len) {
        if (baseStr[baseStrIndex] == str[strIndex]) {
            if (strIndex == 0U)
                resIndex = baseStrIndex;
            strIndex++;
        } else {
            resIndex = -1;
        }
        baseStrIndex++;
    }
    return resIndex;
}
